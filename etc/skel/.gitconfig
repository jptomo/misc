# vim:ft=gitconfig noet:

[include]
	path = ~/.local/misc/etc/git/gitconfig

[core]
	attributesfile = ~/.local/misc/etc/git/gitattributes
	excludesfile = ~/.local/misc/etc/git/gitignore

[user]
	name = Tomohiro NAKAMURA
	email = quickness.net@gmail.com

[http]
	; windows: /ssl/certs/ca-bundle.crt
	; linux: /etc/ssl/certs/ca-bundle.crt
	sslCAinfo = /ssl/certs/ca-bundle.crt

[sendemail]
	; windows:    /bin/msmtp.exe
	; linux mint: /usr/bin/msmtp
	smtpserver = /mingw64/bin/msmtp.exe

[credential]
	helper = store --file ~/.git-credentials
	helper = cache --timeout=300
